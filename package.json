{
  "name": "vk-bot.js",
  "version": "1.0.0",
  "description": "Удобная библиотека для создания ботов ВКонтакте с веб-интерфейсом для отладки",
  "main": "lib/index.js",
  "files": [
    "lib/",
    "web/",
    "examples/",
    "README.md"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=production node lib/index.js",
    "dev": "cross-env NODE_ENV=development nodemon lib/index.js",
    "test": "jest",
    "build": "vite build",
    "dev:web": "vite",
    "example:echo": "cross-env NODE_ENV=development node examples/echo-bot.js",
    "example:echo:prod": "cross-env NODE_ENV=production node examples/echo-bot.js",
    "debug": "cross-env NODE_ENV=development node web/server.js",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run example:echo\""
  },
  "keywords": [
    "vk",
    "bot",
    "vkontakte",
    "api",
    "debug",
    "web-interface"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "axios": "^1.6.2",
    "core-js": "^3.41.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.11.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "vk-io": "^4.0.0",
    "vue": "^3.5.13",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.0"
  }
}
